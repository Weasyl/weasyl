{% from 'common/stage_title.jinja2' import stage %}
{% macro unverified_macro(targetid, target_username,can_vouch) -%}
{{ stage("Unverified Account") }}

<div id="error_content" class="content">
  <p>
     This account hasn’t been <a href="{{ 'help_verification'|route_path }}">verified</a> yet, so it’s hidden to reduce spam.

    {% if can_vouch %}
      If you know its owner, please vouch for their non-spamminess!
   {% endif %}
  </p>

  <form id="error_buttons" method="POST" action="{{ 'vouch' | route_path }}">
    {% if can_vouch %}
      <input type="hidden" name="token" value="{{ TOKEN() }}"/>
      <input type="hidden" name="targetid" value="{{ targetid }}">
      <button class="button positive">Vouch for {{ target_username }}</button>
   {% endif %}

    <a href="javascript:;" onclick="history.back()" class="button">Go Back</a>
  </form>
</div>
{%- endmacro %}