{% extends 'common/base.jinja2' %}
{% from 'common/stage_title.jinja2' import stage %}
{% macro PARSE_SETTINGS(settings) -%}
    {# TODO: Make this more likeable. #}
    {% set names = [] %}
    {% if 'h' in settings %}
        {% do names.append("Hidden") %}
    {% else %}
        {% do names.append("Not hidden") %}
    {% endif %}
    {% if 'f' in settings %}
        {% do names.append("Friends only") %}
    {% endif %}
    {% if 'q' in settings %}
        {% do names.append("Critique requested") %}
    {% endif %}
    {{ names | join('; ') }}
{%- endmacro %}
{% block content %}
    {{ stage("User Content", "Moderator Control Panel", "/modcontrol") }}
<div class="content content-by-user-page">
  <form action="/modcontrol/massaction" method="post">
    <input type="hidden" name="token" value="{{ TOKEN() }}"/>
    <input type="hidden" name="name" value="{{ name }}">
    <table class="content-by-user">

      {% for i in query %}
        <tr>
          <td class="checkbox-cell">
            <div class="checkbox-cell-wrapper">
              <label class="input-checkbox clear">
                {% if i['contype'] == 10 %}
                  <input type="checkbox" name="submissions" value="{{ i['submitid'] }}" id="checkbox-{{ i['submitid'] }}">
                {% elif i['contype'] == 20 %}
                  <input type="checkbox" name="characters" value="{{ i['charid'] }}" id="checkbox-{{ i['charid'] }}">
                {% elif i['contype'] == 30 %}
                  <input type="checkbox" name="journals" value="{{ i['journalid'] }}" id="checkbox-{{ i['journalid'] }}">
                {% endif %}
              </label>
            </div>
          </td>
          <td class="thumb-cell">
            {% if 'sub_media' in i %}
              {% set thumb = THUMB(i) %}
              <img src="{{ thumb['display_url'] }}" alt="" class="thumb"/>
            {% else %}
              <span class="journal-thumb">&lt;journal&gt;</span>
            {% endif %}
          </td>
          <td class="title-cell">
            {% if i['contype'] == 10 %}
              <a href="/submission/{{ i['submitid'] }}/{{ i['title'] | SLUG }}?anyway=true" target="_blank" class="title">{{ i['title'] }}</a>
            {% elif i['contype'] == 20 %}
              <a href="/character/{{ i['charid'] }}/{{ i['title'] | SLUG }}?anyway=true" target="_blank" class="title">{{ i['title'] }}</a>
            {% elif i['contype'] == 30 %}
              <a href="/journal/{{ i['journalid'] }}/{{ i['title'] | SLUG }}?anyway=true" target="_blank" class="title">{{ i['title'] }}</a>
            {% endif %}
          </td>
          <td class="rating-cell">
            <span class="rating {{ R.CODE_TO_NAME[i['rating']] }}">{{ R.CODE_TO_NAME[i['rating']] }}</span>
          </td>
          <td class="time-cell">
            <span class="time">{{ i['unixtime'] | DATE }} at {{ i['unixtime'] | TIME }}</span>
          </td>
          <td class="visibility-cell">
            <span class="visibility">{{ PARSE_SETTINGS(i['settings']) }}</span>
          </td>
        </tr>
      {% endfor %}
    </table>

    <div class="content-by-user-actions">
      <button type="button" class="button needs-js do-check">Check All</button>
      <button type="button" class="button needs-js do-uncheck">Uncheck All</button>
      <div class="content-by-user-moderate">
        <select name="action" class="input action-selection">
          {% for value, name in M.MACRO_MOD_ACTIONS %}
            <option value="{{ value }}">{{ name }}</option>
          {% endfor %}
        </select>
        <button class="button positive" type="submit">Moderate Selection</button>
      </div>
    </div>
  </form>
</div>
{% endblock %}