{% extends 'common/base.jinja2' %}
{% from 'common/stage_title.jinja2' import stage %}
{% from 'common/macros.jinja2' import AVATAR %}
{% block content %}
    {{ stage("Users You Follow", "Settings", "/control") }}
<div class="content" id="following-users">
    {% if(query) %}
    <ul class="grid avatar-grid">
      {% for i in query %}
      <li class="grid-unit">
        <figure class="thumbnail">
          {{ AVATAR(i) }}
          <figcaption class="caption centered big">
              <h5>
                  <a class="username one-line" href="/~{{ i['username'] | LOGIN }}" title="{{ i['username'] }}">{{ i['username'] }}</a>
              </h5>
              <a class="button positive" href="{{ 'control_manage_follow'|route_path(userid=i['userid']) }}">Edit Settings</a>
            <form action="/unfollowuser" method="post" data-confirm="Unfollow this user?">
                <input type="hidden" name="token" value="{{ TOKEN() }}" />
                <input type="hidden" name="userid" value="{{ i['userid'] }}" />
              <button class="button negative">Unfollow</button>
            </form>
          </figcaption>
        </figure>
      </li>
      {% endfor %}

    </ul>
    <div>
    <a class="button" href="/manage/following?backid={{ query[0]['userid'] }}">Back</a>
    <a class="button" href="/manage/following?nextid={{ query[-1]['userid'] }}">Next</a>
    </div>
    {% else %}
    <p>There are no followed users to display.</p>
    {% endif %}
</div>
{% endblock %}