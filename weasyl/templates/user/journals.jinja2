{% extends 'common/base.jinja2' %}
{% import 'user/user_tools.jinja2' as user_macro %}
{% block content %}
<div id="journals_stage" class="stage">
  {{ user_macro.USERTOOLS(profile, userinfo, relationship) }}
  {{ user_macro.USERTABS(profile['username'], "journals", profile['show_favorites_tab']) }}
</div>

<div class="content" id="journals-content">
  <div class="form wide">
    <h3>Journals</h3>

    {% for i in journals %}
      <h4><a href="/journal/{{ i['journalid'] }}/{{ i['title']| SLUG }}">{{ i['title'] }}</a></h4>
    {% endfor %}
  </div>
</div>
{% endblock %}